<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/Titol_Kg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pes en Kg:"/>

        <EditText
            android:id="@+id/et_Kg"
            android:layout_width="150dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/exemple_Kg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(exemple: 76)" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">


        <TextView
            android:id="@+id/Titol_M"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AlÃ§ada en metres:" />


        <EditText
            android:id="@+id/et_M"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp" />

        <TextView
            android:id="@+id/Exemple_M"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:text="(exemple: 1.80)" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <Button
            android:id="@+id/buttoCalcul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CALCULAR IMC"
            android:layout_gravity="center"/>


    </LinearLayout>


</LinearLayout>